<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<div class="flex items-center">
  <h1 class="text-2xl font-bold">Posts</h1>
  <%= link_to "New post", new_post_path, class: "btn btn-primary ml-2" %>
</div>

<div id="posts">
  <table class="w-full border-collapse">
    <thead>
      <tr>
        <th class="border p-2">Title</th>
        <th class="border p-2">Link</th>
        <th class="border p-2 w-1/4"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="border p-2"><%= post.title %></td>
          <td class="border p-2"><%= truncate(post.url, length: 100) %></td>
          <td class="border p-2 text-right">
            <% if post.user == current_user %>
              <%= link_to "Edit", edit_post_path(post), class: "btn btn-secondary" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
